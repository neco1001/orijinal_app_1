<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <div class="picture">
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </div>

  <!--　いいね機能  -->
  <span class="like">
    <% if like = current_user.liked(micropost) %>
      <%= link_to "いいね！を取り消す", micropost_like_path(micropost, like), method: :delete, remote: true %>
    <% else %>
      <%= link_to "いいね！", micropost_likes_path(micropost), method: :post, remote: true %>
    <% end %>
  </span>

  <!--　いいねカウント  -->
  <span class="likes_count">
    いいね！<%= micropost.likes_count %>件
  </span>

  <span class="content">
    <%= "#{micropost.user.name} #{micropost.content}" if micropost.content? %>
  </span>

  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if micropost.user == current_user %>
      <%= link_to "delete", micropost, method: :delete, data: { confirm: "You sure?" } %>
    <% end %>
  </span>
</li>
