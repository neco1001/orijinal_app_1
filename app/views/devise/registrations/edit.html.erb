<% provide(:title, "プロフィール更新") %>
<h1>プロフィール更新</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(最小<%= @minimum_password_length %>文字)</em>
        <% end %>
        <i>　※変更したくない場合は空白のままにしてください。</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :current_password, '現在のパスワード'%> <i>　※更新するには現在のパスワードの入力が必要です。</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit "更新", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="gravatar_edit">
      <p>プロフィール画像の変更</p>
      <%= link_to gravatar_for(resource), "http://gravatar.com/emails", target: "_blank", rel: "noopener" %>
      <div class="clear"></div>
    </div>

    <div class="user_delete">
      <p>アカウント削除</p>
      <%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary" %>
    </div>

    <div class="links">
      <%= link_to "戻る", :back %>
    </div>
  </div>
</div>
